<%- include('partials/authheader'); -%>
<title>Create a new password</title>
<!--link href="./css/newpassword.css" rel="stylesheet" type="text/css"-->
<style type="text/css">
	body {
		background-image: url("");
		background-repeat: no-repeat;
		background-size: cover;
		font-family: 'Inter', sans-serif;
		height: 100vh;
		display: flex;
		flex-direction: column;
		/*justify-content: center;
		align-items: center;*/
	}
	.form-container {
		display: flex;
		justify-content: center;
		align-items: center;
	}
	.card {
		position: relative;
		margin: 10px;
		border-radius: 4px;
		background-color: rgba(255, 255, 255, 0.8);
		box-shadow: 3px 3px 15px rgba(0, 0, 0, 0.4);
		width: 400px;
		padding: 30px 40px;
	}
	.card h4 {
		font-size: 25px;
		padding: 25px 0px;
	}
	form {
		display: flex;
		flex-direction: column;
	}
	.form-items {
		display: flex;
		flex-direction: column;
	}
	.form-title {
		font-size: 13px;
		padding-bottom: 5px;
	}
	.input-field {
		border: none;
		border-radius: 4px;
		background-color: rgba(1,74,115, 0.1);
		width: 100%;
		height: 45px;
		outline: none;
		padding-left: 6px;		
	}
	input[type="file"]::file-selector-button {
		background-color: transparent;
		color: #012546;
		border: none;
		padding: 10px 0px 0px 0px;
		cursor: pointer;
	}
	.input-field::placeholder {
	}
	span > a {
		background-color: ;
		font-size: 14px;
		padding: 0px 0px 3px 8px;
		text-decoration: none;
	}
	form > div {
		display: flex;
		justify-content: center;
	}

	button {
		width: 50%;
		padding: 15px 30px;
		background-color: black;
		color: #fff;
		cursor: pointer;
		border-radius: 4px;
	}

	/*Media Queries for Tablets*/
	@media only screen and (max-width: 1050px) {
		button {
			width: 100%;
		}
	}

	/*Media Queries for Mobile Phones*/
	@media only screen and (max-width: 450px) {
		section {
			display: flex;
			justify-content: center;
		}
		.form-container {
			width: 95%;
		}
		.card {
			/*border-radius: 4px;*/
			background-color: rgba(255, 255, 255, 1);
			width: 100%;
		}
		.card h4 {
			font-size: 23px;
		}
		span > a {
			font-size: 12px;
		}

	}

</style>
	<section>
    	<div class="form-container">
    		<div id="form-wrapper" class="card">
    			<h4 align="center">Hi Name! Create a New Password</h4>
    			<form>
    				<label for="password" class="form-items">
    					<span class="form-title">Password</span>
    					<input type="password" name="password" id="password" class="input-field" placeholder="Enter new password">
    				</label><br>
    				<label for="confirm-password" class="form-items">
    					<span class="form-title">Confirm Password</span>
    					<input type="password" name="confirm-password" id="confirm-password" class="input-field" placeholder=" Re-enter new password">
    				</label><br>
    				<div class="btn-wrapper">
    					<button type="submit">Save New Password</button>	
    				</div>
    			</form>
    		</div>
    	</div>
    </section>
</body>
<script type="text/javascript">
	const log = console.log;
	const form = document.querySelector('form');
    const passwordError = document.querySelector('.password.error');

  	form.addEventListener('submit', async (e) => {
    	e.preventDefault();

    	// reset errors
    	//passwordError.textContent = '';

    	// get values
    	const password = form.password.value;
    	log(password);

    	try {
      		const res = await fetch('http://localhost:5000/auth/new-password', { 
        		method: 'PATCH', 
        		body: JSON.stringify({ password }),
        		headers: {'Content-Type': 'application/json'}
      		});

      		const data = await res.json();
      		console.log(data);

      		if (data.err) {
        		//console.log(data.errors.email);
        		passwordError.textContent = data.err;
      		}

			    if (data.user) {
       	 		location.assign('/login');
      		}

    	}
    	catch (err) {
      		console.log(err);
    	}

  	});
</script>
</html>

